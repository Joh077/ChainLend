{
  "name": "chainlend-backend",
  "version": "1.0.0",
  "description": "ChainLend - Protocole de prêt P2P avec collatéral ETH",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "test:coverage": "SOLIDITY_COVERAGE=true npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy:localhost": "hardhat ignition deploy ignition/modules/ChainLendModule.js --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/ChainLendModule.js --network sepolia",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "setup-test": "hardhat run scripts/setupTestData.js --network localhost",
    "deploy:dev": "hardhat ignition deploy ignition/modules/ChainLendModule.js --network hardhat",
    "deploy:localhost": "hardhat ignition deploy ignition/modules/ChainLendModule.js --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/ChainLendModule.js --network sepolia"
  },
  "keywords": [
    "defi",
    "lending",
    "ethereum",
    "smart-contracts",
    "chainlink",
    "p2p"
  ],
  "author": "Votre nom",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  }
}
